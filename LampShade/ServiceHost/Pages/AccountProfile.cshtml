@page
@model ServiceHost.Pages.AccountProfileModel
@{
    ViewData["Title"] = "پنل کاربری";
}
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">مشخصات</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="./Index">صفحه اصلی</a>
                            </li>
                            <li class="active"> مشخصات</li>

                        </ul>
                        <h2 class="text-danger">به وبسایت فروشگاه لوازم خانگی خوش آمدید</h2>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="login-form">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-body">
                        <form method="post" asp-page-handler="EditProfile">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>نام و نام خانوادگی*</label>
                                    <input type="text" asp-for="EditAccount.FullName" name="fullname" placeholder="نام و نام خانوادگی">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>موبایل*</label>
                                        <input type="text" asp-for="EditAccount.Mobile" name="mobile" placeholder="موبایل">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>نام و نام خانوادگی*</label>
                                    <input type="text" asp-for="EditAccount.Address" name="address" placeholder="آدرس">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>موبایل*</label>
                                        <input type="text" asp-for="EditAccount.PostalCode" name="postalcode" placeholder="کد پستی">
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" value="@Model.EditAccount.Id" name="id"/>
                            <input type="hidden" value="@Model.EditAccount.UserName" name="username"/>
                            <input type="hidden" value="@Model.EditAccount.RoleId" name="roleid"/>
                            <button class="btn btn-success waves-effect waves-light m-b-5"> ویرایش</button>
                            <a asp-page="./Index" class="btn btn-secondary waves-effect waves-light m-b-5">بازگشت</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
